#!/bin/bash
if ! [ "$(ls -A /entando-data/databases/)" ]; then
  echo "New Entando instance detected. Copying Default Entando DB"
  cp /entando-database-templates/* /entando-data/databases/ -rf
fi
exec /wildfly/bin/standalone.sh -b 0.0.0.0 -bmanagement 0.0.0.0 -Dderby.system.home=/entando-data/databases